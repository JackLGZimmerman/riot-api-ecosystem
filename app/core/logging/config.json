{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json": {
            "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime) %(levelname) %(name) %(message)",
            "ensure_ascii": false
        },
        "schema_drift_json": {
            "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime) %(levelname) %(match_id) %(keys)",
            "ensure_ascii": false
        }
    },  
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "json",
            "stream": "ext://sys.stdout"
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "json",
            "stream": "ext://sys.stderr"
        },
        "json_file": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "app/core/logging/logs/app.log.jsonl",
            "when": "midnight",
            "backupCount": 7,
            "encoding": "utf-8"
        },
        "schema_drift_timeline_json_file": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "INFO",
            "formatter": "schema_drift_json",
            "filename": "app/core/logging/logs/schema_drift/timeline.log.jsonl",
            "when": "midnight",
            "backupCount": 14,
            "encoding": "utf-8"
        },
        "schema_drift_non_timeline_json_file": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "INFO",
            "formatter": "schema_drift_json",
            "filename": "app/core/logging/logs/schema_drift/non_timeline.log.jsonl",
            "when": "midnight",
            "backupCount": 14,
            "encoding": "utf-8"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "stdout",
            "json_file"
        ]
    },
    "loggers": {
        "tasks": {
            "level": "INFO",
            "propagate": true
        },
        "tasks.player_collection": {
            "level": "DEBUG",
            "propagate": true
        },
        "schema_drift.timeline": {
            "level": "INFO",
            "handlers": [
                "schema_drift_timeline_json_file"
            ],
            "propagate": false
        },
        "schema_drift.non_timeline": {
            "level": "INFO",
            "handlers": [
                "schema_drift_non_timeline_json_file"
            ],
            "propagate": false
        }
    }
}
